@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>List of Students</h2>
<form>
    <select name="gen" onchange="submitForm()">
        <!option value="male" @(ViewBag.filter == "male" ? "selected" : "null")>Male</!option>
        <!option value="female" @(ViewBag.filter == "female" ? "selected" : "null")>Female</!option>
    </select>
</form>
<script>
    function submitForm() {
        var form = document.forms[0];
        form.action = "/Student/Filter";
        form.submit();
    }
</script>
<table>
    <thead>
        <tr>
            <th>Fullname</th>
            <th>Sex</th>
            <th>Dob</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.sts)
        {
            <tr>
                <td>@item.Fullname</td>
                <td>@item.Sex</td>
                <td>@item.Dob</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>